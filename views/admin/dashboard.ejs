<% include ../partials/header %>
<script type="text/javascript">obj.setData(<%- JSON.stringify(results) %>)</script>
<div class="container1">
	<div class="box box-1">
		<ul>
			<li><i class="fas fa-chart-pie"></i><a id="a_dept_chart" onclick="updatePage(event)"> Show Dept Pie Chart</a><li>
            <li><i class="fas fa-chart-pie"></i><a id="a_loc_chart" onclick="updatePage(event)"> Show Location Pie Chart</a><li>
	      	<li><i class="fas fa-user"></i><a id="a_users"onclick="updatePage(event)"> Add User</a></li>
	      	<li><i class="fas fa-search"></i><a id="a_search" onclick="updatePage(event)"> Search Users</a></li>
    	</ul>
	</div>
	<div class="box box-2">
		<select id="dept_select" hidden>
			<option value="all">Show All</option>
		</select>
		<select id="loc_select" hidden>
			<option value="all">Show All</option>
		</select>
		<div class="flex-container charts" id="deptpiechart" hidden></div>
        <div class="flex-container charts" id="locpiechart" hidden></div>
		<form id="search"  hidden>First Name: 
			<input type="text" onkeyup="obj.showHint(this.value)"/>
	    	<input type="submit" value="Search" />
		</form>
		<div class="flex-container" id="search_res" hidden></div>
		<div class="flex-container" id="addUser" hidden>
		    <h1 style="text-align: center;">Add New User</h1>
	        <div style="width: 30%; margin:25px auto;">
	            <form action="/admin/users" method="post" enctype="multipart/form-data">
	                <div class="form-group">
	                    <label for="username">Username</label>
	                    <input class="form-control" type="text" name="username" required>
	                </div>
	                <div class="form-group">
	                    <label for="password">Password</label>
	                    <input class="form-control" type="text" name="password" required>
	                </div>
	                <div class="form-group">
	                    <label for="signature">Signature</label>
	                    <input class="form-control" type="file" name="signature" id="signature" accept=".jpg">
	                </div>
	                <div class="form-group">
	                    <label for="permission">Permission</label>
	                    <br>
                    	<select id="permission">
							<option value="all">Select User Type</option>
							<option value="0">Normal User</option>
							<option value="1">Admin User</option>
						</select>
	                </div>
	                <br>
	                <div class="form-group">
	                    <label for="emp_select">Employee ID</label>
	                    	<select id="emp_select">
								<option value="all">Select an Employee</option>
							</select>
	                </div>
	                <div class="form-group">
	                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
	                </div>
	            </form>
	        </div>
		</div>
	</div>
</div>
<% include ../partials/footer %>