<div class="flex-container" id="addUser" hidden>
    <h1 style="text-align: center;">Add New User</h1>
    <div style="width: 30%; margin:25px auto;">
        <form action="/admin/users" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="text" name="password" required>
            </div>
           <div class="form-group">
                <label for="secret">Secret</label>
                <input class="form-control" type="text" name="secret" required>
            </div>
            <div class="form-group">
                <label for="signature">Signature</label>
                <input class="form-control" type="file" name="signature" id="signature" accept=".jpg">
            </div>
            <div class="form-group">
                <label for="permission">Permission</label>
            	<select id="permission" name="permission" required>
					<option disabled>Select User Type</option>
					<option value="0">Normal User</option>
					<option value="1">Admin User</option>
				</select>
            </div>
            <br>
            <div class="form-group">
                <label for="emp_select">Employee</label>
                	<select id="emp_select" name="emp_select" required>
						<option disabled>Select an Employee</option>
					</select>
            </div>
            <br><br>
            <div class="form-group" style="float: left">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
    </div>
</div>