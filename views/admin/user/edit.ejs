<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=results[0].username%></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/admin/users/<%=results[0].id%>/?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="username" value="<%=results[0].username%>" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="text" name="password" value="<%=results[0].password%>" required>
                </div>
                <div class="form-group">
                    <label for="signature">Signature</label>
                    <input class="form-control" type="file" name="signature" id="signature" value="<%=results[0].signature %>">
                </div>
                <div class="form-group">
                    <label for="permission">Permission</label>
                    <input class="form-control" type="text" name="permission" value="<%=results[0].permission%>" min=0 max=1 required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
</div>
<% include ../../partials/footer %>