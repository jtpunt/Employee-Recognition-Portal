<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=results[0].username%></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/admin/users/<%=results[0].id%>/?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="username" value="<%=results[0].username%>" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="text" name="password" value="<%=results[0].password%>" required>
                </div>
                <div class="form-group">
                    <label for="secret">Secret</label>
                    <input class="form-control" type="text" name="secret" value="<%=results[0].secret%>" required>
                </div>
                <div class="form-group">
                    <img src="data:image/jpg;base64,<%=results[0].signature %>" height="150" width="300">
                    <% console.log("hello ", typeof results[0].signature) %>
                    <br>
                    <label for="signature">Signature</label>
                    <input class="form-control" type="file" name="signature" id="signature" accept=".jpeg">
                </div>
                <div class="form-group">
                    <label for="permission">Permission</label>
                        <select name="permission" id="permission">
                            <option>Select User Type</option>
                            <% if(results[0].permission == 1){ %>
                                <option value="0">Normal User</option>
                                <option value="1" selected>Admin User</option>
                            <% } else{ %>
                                <option value="0" selected>Normal User</option>
                                <option value="1">Admin User</option>
                           <% } %>
                        </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
</div>
<% include ../../partials/footer %>